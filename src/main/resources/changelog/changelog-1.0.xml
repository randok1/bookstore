<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
    <changeSet  author="nvoxland"  id="1">
        <createTable tableName="person">
            <column  name="id"  type="INTEGER">
                <constraints  nullable="false"  primaryKey="true"  unique="true"/>
            </column>
            <column  name="name"  type="VARCHAR(255)" />
        </createTable>
    </changeSet>
    <changeSet id="2023-01-11 Add employee table" author="Rando Kuus">
        <createTable tableName="employee">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="text"/>
            <column name="address" type="text"/>
            <column name="salary" type="numeric"/>
        </createTable>
    </changeSet>
    <changeSet id="2023-01-11 Add account and history table" author="Rando Kuus">
        <createTable tableName="account">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="account_nr" type="text">
                <constraints unique="true"/>
            </column>
            <column name="first_name" type="text"/>
            <column name="last_name" type="text"/>
            <column name="locked" type="boolean"/>
            <column name="balance" type="double precision"/>
        </createTable>
        <createTable tableName="history">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="accountId" type="integer">
                <constraints foreignKeyName="fk_history_account" references="account(id)"/>
            </column>
            <column name="account_nr" type="text"/>
            <column name="action" type="text"/>
            <column name="date_time" type="timestamp"/>
            <column name="state" type="text"/>
        </createTable>
    </changeSet>
</databaseChangeLog>